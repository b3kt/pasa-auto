# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with real secrets to version control

# Database Configuration
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_URL=jdbc:postgresql://localhost:5432/your_database
DB_MAX_SIZE=10
DB_MIN_SIZE=2
DB_GENERATION=validate

# Security Configuration
APP_SECURITY_SALT=your_random_salt_string_at_least_16_chars

# JWT Configuration
JWT_PRIVATE_KEY=path/to/your/private/key.pem
JWT_PUBLIC_KEY=path/to/your/public/key.pem
JWT_ISSUER=https://your-domain.com

# Server Configuration
SERVER_URL=http://localhost:8080
HTTP_PORT=80
HTTPS_PORT=443

# SSL Certificate Paths
CERT_FILE_PATH=/path/to/your/certificate.pem
KEY_FILE_PATH=/path/to/your/private/key.pem

# Feature Flags
RBAC_ENABLED=false
OPENAPI_ENABLED=true
SWAGGER_ENABLED=false

# Logging
LOG_PATH=/var/log/quarkus/app.log
