{
  "name": "pazaauto-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.github.b3kt.pazaauto",
    "productName": "PazaAutoApp",
    "files": [
      "main.js",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "."
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}